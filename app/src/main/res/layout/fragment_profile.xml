<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grispokmy">


        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/fondappli3"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.35"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/fond2"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />



        <LinearLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.27" />


        <LinearLayout
            android:id="@+id/layout_white_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/rounded_bg"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.38"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/drop"
            app:layout_constraintWidth_percent="0.8"/>



        <LinearLayout
            android:id="@+id/layout_blue"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.35"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline19"
            app:layout_constraintWidth_percent="0.9" />


        <TextView
            android:id="@+id/nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:fontFamily="@font/comfortaabold"
            android:text=""
            android:textColor="@color/white"
            android:textSize="18sp"
            android:letterSpacing="0.2"
            android:textAllCaps="true"
            app:layout_constraintBottom_toTopOf="@id/drop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Sales Director (NSW)" />

        <TextView
            android:id="@+id/posteTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/comfortaalight"
            android:text="Etudiant"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/position"
            tools:text="Etudiant" />

        <TextView
            android:id="@+id/cityTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto_light"
            android:text=""
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/resumeBtn"
            app:layout_constraintEnd_toEndOf="@id/layout_blue"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/layout_blue"
            app:layout_constraintTop_toBottomOf="@+id/posteTV"
            tools:text="Sydney, Australia" />

        <TextView
            app:layout_constraintTop_toBottomOf="@id/resumeBtn"
            android:id="@+id/bac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/comfortaaregular"
            android:text="Bac :"
            android:textStyle="bold"

            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@id/layout_white_1"
            android:layout_marginStart="16dp"
            android:textColor="@color/orange_edit_text"
            app:layout_constraintDimensionRatio=""
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintWidth_percent="0.11"
            tools:layout_editor_absoluteX="175dp" />


        <TextView
            app:layout_constraintTop_toBottomOf="@id/resumeBtn"
            android:id="@+id/bacV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/comfortaaregular"
            android:text="Economie"

            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@id/moyenneV"
            android:textColor="@color/black"
            app:layout_constraintDimensionRatio=""
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintWidth_percent="0.11"
            tools:layout_editor_absoluteX="175dp" />


        <TextView
            app:layout_constraintBottom_toBottomOf="@id/rang"
            app:layout_constraintTop_toTopOf="@id/rang"
            android:id="@+id/rangV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaaregular"
            android:text="2736"

            app:layout_constraintStart_toStartOf="@id/moyenneV"
            android:textColor="@color/black"
            app:layout_constraintDimensionRatio=""
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintWidth_percent="0.11"
            tools:layout_editor_absoluteX="175dp" />


        <TextView
            app:layout_constraintTop_toTopOf="@id/moyenne"
            app:layout_constraintBottom_toBottomOf="@id/moyenne"
            android:id="@+id/moyenneV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaaregular"
            android:text="15.67"
            android:maxLength="5"
            app:layout_constraintStart_toEndOf="@id/moyenne"
            android:layout_marginStart="16dp"
            android:textColor="@color/black"
            app:layout_constraintDimensionRatio=""
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintWidth_percent="0.11"
            tools:layout_editor_absoluteX="175dp" />


        <TextView
            app:layout_constraintTop_toBottomOf="@id/bac"
            android:id="@+id/rang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/comfortaaregular"
            android:text="Rang :"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@id/layout_white_1"
            android:layout_marginStart="16dp"
            android:textColor="@color/orange_edit_text"
            app:layout_constraintDimensionRatio=""
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintWidth_percent="0.11"
            tools:layout_editor_absoluteX="175dp" />


        <TextView
            app:layout_constraintTop_toBottomOf="@id/rang"
            android:id="@+id/moyenne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/comfortaaregular"
            android:text="Moyenne :"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@id/layout_white_1"
            android:layout_marginStart="16dp"
            android:textColor="@color/orange_edit_text"
            app:layout_constraintDimensionRatio=""
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintWidth_percent="0.11"
            tools:layout_editor_absoluteX="175dp" />

        <ImageView
            android:id="@+id/resumeBtn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:elevation="10dp"
            android:fontFamily="@font/comfortaabold"
            android:src="@drawable/bm_btn"
            android:text="Informations"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/layout_white_1"
            app:layout_constraintWidth_percent="0.5" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/resumeBtn"
            app:layout_constraintEnd_toEndOf="@id/resumeBtn"
            app:layout_constraintTop_toTopOf="@id/resumeBtn"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="@id/resumeBtn"
            android:text="Informations"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/comfortaabold"/>

        <TextView
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:fontFamily="@font/roboto_bold"
            android:text=""
            android:visibility="invisible"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/drop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Sales Director (NSW)" />

        <TextView
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Etudiant"
            tools:text="Audi Australia"
            android:textColor="@color/default_txt_color"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/position" />


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/drop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@color/white"
            app:civ_circle_background_color="@color/white"
            app:civ_border_color="@color/white"
            app:civ_border_width="3dp"
            app:layout_constraintBottom_toBottomOf="@id/guideline20"
            app:layout_constraintEnd_toEndOf="@id/guideline29"
            app:layout_constraintHeight_percent="0.17"
            app:layout_constraintStart_toStartOf="@id/guideline28"
            app:layout_constraintTop_toTopOf="@id/guideline20" />

        <ImageView
            android:id="@+id/defaultImg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_avatar"
            android:layout_margin="12dp"
            app:layout_constraintStart_toStartOf="@id/drop"
            app:layout_constraintEnd_toEndOf="@id/drop"
            app:layout_constraintTop_toTopOf="@id/drop"
            app:layout_constraintBottom_toBottomOf="@id/drop"
            android:elevation="10dp"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.38" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.0945946" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.38" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.62" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.55" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.64" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.21" />




        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/PagerTabStripText"
            android:paddingTop="24dp"
            android:paddingBottom="24dp" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:fontFamily="@font/comfortaabold"
                android:text="@string/profile"
                android:layout_margin="16dp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <!--
            <ImageView
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:tint="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/title"
                app:layout_constraintDimensionRatio="2:2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/title"
                app:srcCompat="@drawable/ic_back2" />
            -->

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
</layout>