<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bg"

    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="15dp"
        android:background="@color/white"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Choisir votre bac"
                android:background="@drawable/rounded_bg"
                android:textColor="@color/orange_edit_text"
                android:textSize="17sp"
                android:fontFamily="@font/comfortaabold"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginStart="16dp"
                android:text="Informatiques"
                android:textColor="@color/hometxt"
                android:textSize="14sp"
                android:fontFamily="@font/comfortaaregular"
                />

            <TextView
                android:id="@+id/lettres"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:text="Lettres"
                android:textColor="@color/hometxt"
                android:textSize="14sp"
                android:fontFamily="@font/comfortaaregular"
                />

            <TextView
                android:id="@+id/science"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lettres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:text="Sciences"
                android:textColor="@color/hometxt"
                android:textSize="14sp"
                android:fontFamily="@font/comfortaaregular"
                />



            <TextView
                android:id="@+id/math"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/science"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:text="Maths"
                android:textColor="@color/hometxt"
                android:textSize="14sp"
                android:fontFamily="@font/comfortaaregular"
                />



            <TextView
                android:id="@+id/tech"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/math"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:text="Techniques"
                android:textColor="@color/hometxt"
                android:textSize="14sp"
                android:fontFamily="@font/comfortaaregular"
                />


            <TextView
                android:id="@+id/eco"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tech"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:text="Economie"
                android:textColor="@color/hometxt"
                android:textSize="14sp"
                android:fontFamily="@font/comfortaaregular"
                />


            <TextView
                android:id="@+id/sport"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/eco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:text="Sport"
                android:textColor="@color/hometxt"
                android:textSize="14sp"
                android:fontFamily="@font/comfortaaregular"
                />

            <TextView
                android:id="@+id/ok"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Okay"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_bg"
                android:textColor="@color/orange_edit_text"
                android:textSize="17sp"
                android:fontFamily="@font/comfortaabold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sport"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>